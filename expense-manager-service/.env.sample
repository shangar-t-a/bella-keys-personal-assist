# App Settings
APP_ENV = "dev"  # Options: "dev", "prod", "test"
APP_NAME = "Expense Manager Service"
APP_VERSION = "1.0.0"
EXP_MANAGER_SERVICE_HOST = "localhost"
EXP_MANAGER_SERVICE_PORT = 8000
EXP_MANAGER_SERVICE_DEBUG = True
ALLOWED_HOSTS = ["*"]
ALLOWED_METHODS = ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]

# Database Settings
STORAGE_TYPE = "sqlite"  # Options: "inmemory", "sqlite"
DATABASE_URL = "sqlite+aiosqlite:///./expense_manager.db"
LOG_DB_QUERIES = False

# Logging Settings
LOG_LEVEL = "INFO"

# CORS Settings
CORS_ORIGINS = ["*"]
CORS_ALLOW_CREDENTIALS = True
CORS_EXPOSE_HEADERS = ["*"]

# AI Model Settings
LLM_PROVIDER = "openai"
LLM_MODEL = "gpt-4o"
LLM_BASE_URL = "https://api.openai.com/v1"
LLM_API_VERSION = "2024-03-15"
LLM_API_KEY = ""
